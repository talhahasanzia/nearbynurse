# Backend Environment Variables
# Copy this file to .env and fill in your values

DATABASE_URL=postgresql://postgres:password@db:5432/mydb
PORT=3000
NODE_ENV=development

# Keycloak issuer (public URL - must match token 'iss' claim for JWT validation)
# This is what browsers/frontend use
# For local dev: http://localhost:8080/realms/master
# For production: http://YOUR_PUBLIC_IP/auth/realms/master
KEYCLOAK_ISSUER=http://54.254.253.205/auth/realms/master

# Keycloak internal URL (for backend to call Keycloak API within Docker network)
# Use 'http://keycloak:8080' in Docker, 'http://localhost:8080' for local dev
KEYCLOAK_URL=http://keycloak:8080

# Keycloak client ID for password grant
KEYCLOAK_CLIENT_ID=nearbynurse-frontend

# Keycloak admin credentials (for user registration via Admin API)
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin
